<launch>

	<!-- this code assumes that whatever's going to be seeds for the Voronoi regions have consecutive Optitrack IDs -->

	<!-- k = 2 with k_linear = 0.1 -->
	<node name="voronoi1" pkg="dyndensity_controller" type="dyndensity_ctrl" output = "screen">
		
		<param name = "startingID" value = "1" type = "int"/>
		<param name = "endingID" value = "5" type = "int"/>

		<param name = "x1" value = "-2.40" type = "double"/>
		<param name = "x2" value = "2.50" type = "double"/>

		<param name = "y1" value = "-1.78" type = "double"/>
		<param name = "y2" value = "1.62" type = "double"/>

		<param name = "refresh_rate" value = "3" type = "int"/>

		<param name = "R" value = "1" type = "double"/>
		<param name = "G" value = "1" type = "double"/>
		<param name = "B" value = "1" type = "double"/>
		<param name = "opaqueness" value = "1" type = "double"/>
		<param name = "shape" value = "arrow" type = "string"/>
		<param name = "size" value = "0.1" type = "double"/>


		<param name = "functionR" value = "1" type = "double"/>
		<param name = "functionG" value = "0" type = "double"/>
		<param name = "functionB" value = "0" type = "double"/>
		<param name = "functionOpaqueness" value = "1" type = "double"/>
		<param name = "functionMarkerSize" value = "0.05" type = "double"/>

		<param name = "functionMin" value = "1" type = "double"/>
		<param name = "functionMax" value = "2" type = "double"/>

		<param name = "functionNumHor" value = "100" type = "int"/>
		<param name = "functionNumVer" value = "100" type = "int"/>
	
		<param name = "k" value = "2" type = "double"/>
<!-- dist 1 -->
<!--		<param name = "k_linear" value = "0.3" type = "double"/> --> 
<!--		<param name = "k_angular" value = "3" type = "double"/> --> 
		<param name = "k_linear" value = "0.3" type = "double"/> 
		<param name = "k_angular" value = "3" type = "double"/>

		<param name = "logBool" value = "0" type = "int"/>

		<param name = "controlChoice" value = "4" type = "int"/>
		<param name = "distributionChoice" value = "4" type = "int"/>
		<param name = "timeConstanta" value = "30" type = "double"/>

		<param name = "verbose" value = "1" type = "int"/>
		<param name = "visualizeDistribution" value = "1" type = "int"/>
		<param name = "visualizeCM" value = "1" type = "int"/>
		<param name = "visualizeVoronoiCells" value = "1" type = "int"/>

		<param name = "UIControlled" value = "1" type = "int"/>		
	</node>

	<group ns="K1">  
		<param name="khepera3/ip_addr" value="192.168.1.204" type="str" />
		<node name="driver" pkg="khepera3_driver" type="driver" />	
	</group>

	<group ns="K2">  
		<param name="khepera3/ip_addr" value="192.168.1.206" type="str" />
		<node name="driver" pkg="khepera3_driver" type="driver" />	
	</group>

	<group ns="K3">  
		<param name="khepera3/ip_addr" value="192.168.1.210" type="str" />
		<node name="driver" pkg="khepera3_driver" type="driver" />	
	</group>

	<group ns="K4">  
		<param name="khepera3/ip_addr" value="192.168.1.212" type="str" />
		<node name="driver" pkg="khepera3_driver" type="driver" />	
	</group>

	<group ns="K5">  
		<param name="khepera3/ip_addr" value="192.168.1.213" type="str" />
		<node name="driver" pkg="khepera3_driver" type="driver" />	
	</group>



</launch>
